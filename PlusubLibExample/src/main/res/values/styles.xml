<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Application theme. android:Theme.Holo.Light.DarkActionBar
    <item name="android:actionBarStyle">@style/ActionBar</item>-->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background_normal</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- main tab -->
    <style name="TabItem_Layout">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="Style.TabItem.Label" parent="@style/ShadowedText">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/maintab_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2.0dip</item>
    </style>
    
    <style name="BottomTab_Notice_Bubble">
        <item name="android:textSize">@dimen/common_text_small_notice</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_msgtip_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2.0dip</item>
        <item name="android:layout_marginRight">-20.0dip</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
        <item name="android:marqueeRepeatLimit">1</item>
    </style>
    
    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
    </style>
    
    <style name="SimpleListView" parent="@style/Style_Scrollable">
        <item name="android:background">@color/transparent</item>
        <item name="android:persistentDrawingCache">all</item>
        <item name="android:listSelector">@drawable/list_selector_transition</item>
        <item name="android:divider">@color/line_dividingline</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>
    
     <style name="ActivityActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- 重新定义actionbar样式 -->
    <style name="ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
