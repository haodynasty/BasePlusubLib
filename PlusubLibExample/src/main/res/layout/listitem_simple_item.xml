<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability= "blocksDescendants"
    android:paddingBottom="1dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_listitem_user_selector"
        android:orientation="horizontal" >
        <com.plusub.lib.view.CircleImageView
            android:id="@+id/list_iv_head"
            android:layout_width="@dimen/common_head_height"
            android:layout_height="@dimen/common_head_height"
            android:src="@drawable/ic_person_default_headview_bg"
            app:border_width="2dp"
            app:border_color="@color/red" />
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" 
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
        	<TextView 
        	    android:layout_marginLeft="@dimen/space_small_buttom_margin_4"
        	    android:layout_marginRight="@dimen/space_small_buttom_margin_4"
        	    android:layout_alignParentLeft="true"
        	    android:id="@+id/list_tv_name"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:text="@string/test"
        	    android:textColor="@color/text_title"
        	    android:textSize="@dimen/typeface_medium_16"/>
    	</RelativeLayout>
     </LinearLayout>
     <View 
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dividingline"/>
</LinearLayout>
