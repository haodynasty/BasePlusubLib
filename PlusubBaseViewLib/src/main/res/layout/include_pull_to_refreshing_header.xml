<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="@color/bg_refresh_bottom"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/refreshing_header_layout_container"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/refreshing_header_iv_arrow"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:scaleType="centerInside"
                android:src="@drawable/ic_common_droparrow" />

            <ImageView
                android:id="@+id/refreshing_header_iv_loading"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:scaleType="centerInside"
                android:src="@drawable/ic_loading"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/refreshing_header_htv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_list_title" 
            	android:textColor="@color/text_title"/>

            <TextView
                android:id="@+id/refreshing_header_htv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/text_view_desc" 
            	android:textColor="@color/text_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>